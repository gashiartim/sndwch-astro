---
import Layout from '../layouts/default.astro';
import ShopItems from '../components/shop-items.astro';
import { Cart } from '../components/cart';
---

<Layout>
	<div class="shop">
		<h1>Shop Sandwich Kits</h1>

		<noscript
			><p>
				JavaScript is required to purchase things from the Sandwich web store.
				If you wanna order by phone, call <a href="tel:12345678"
					>+1 248-434-5508</a
				>
			</p></noscript
		>

		<div class="products">
			<ShopItems />

			<Cart client:visible />
		</div>
	</div>
</Layout>

<style>
	.shop {
		padding: 3rem 5%;
	}

	.products {
		align-items: flex-start;
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr 260px;
		position: relative;
	}
</style>
